{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["**/*.spec.ts"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "prefer-const": "error",
        "no-console": "off",
        "func-style": ["error", "declaration"],
        "semi": ["error", "always"]
      }
    }
  ]
}
